#include <pigpiod_if2.h>
#include <unistd.h>

int main(void){
    int pi = pigpio_start(0,0);
    int pin_reset = 5;
    int pin_led = 6;
    int spi_device = 0;
    int baud = 7800000;
    int spi_flag = 0;
    set_mode(pi, pin_reset, PI_OUTPUT);
    set_mode(pi, pin_led, PI_OUTPUT);
    spi_open(pi, spi_device, baud, spi_flag);

    while (1){
        gpio_write(pi, pin_led, 1);
        usleep(500000);
        gpio_write(pi, pin_led, 0);
        usleep(500000);
    }
    return 0 ;
}
